{
  "name": "Python 3",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "pericarditis_app.py"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "updateContentCommand": "[ -f packages.txt ] && apt update && apt upgrade -y && xargs apt install -y < packages.txt; [ -f requirements.txt ] && pip install --no-cache-dir -r requirements.txt; pip install streamlit && echo 'âœ… Packages installed'",
  "postAttachCommand": "streamlit run pericarditis_app.py --server.enableCORS false --server.enableXsrfProtection false",
  "forwardPorts": [8501],
  "portsAttributes": {
    "8501": {
      "label": "Streamlit App",
      "onAutoForward": "openPreview"
    }
  }
}
